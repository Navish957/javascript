//ARRAY CHALLENGES
//1. one

let colors = ['green', 'red', 'black', 'blue']
 let firstElement = colors[0];
 console.log(firstElement);
 
//2. two

let cities = ['London', 'NewYork', 'Washington']
let thirdEle = cities[2];
console.log(thirdEle);

//3. change the value at second number
let spark = ['green', 'red', 'black', 'blue']
spark[1] = 'changedPink';
let secEle = spark[1];
console.log(secEle);

//4. using push method
let cityVis = ['d/shala', 'Shimla', 'Kangra']
let addOne = cityVis.push('chandigarh');
console.log(cityVis);

//5. remove  using PoP method
let cityWish = ['d/shala', 'Shimla', 'Kangra']
let remLast =  cityWish.pop();
console.log(cityWish);
